<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.GROOVE"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activity.SearchList"
            android:exported="false">

        </activity>
        <activity
            android:name=".activity.Search"
            android:exported="false">

        </activity>
        <activity
            android:name=".activity.Fav_Artist_Selection"
            android:exported="false" />
        <activity
            android:name=".activity.Motion"
            android:exported="false" />
        <activity
            android:name=".activity.PlayerActivity"
            android:exported="false" />
        <activity
            android:name=".activity.Fav_Songs_Selection"
            android:exported="false" />
        <activity
            android:name=".activity.Join"
            android:exported="false" />
        <activity
            android:name=".activity.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Movie_Player"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TagPlayList"
            android:exported="false" />
        <activity
            android:name=".activity.LikeList"
            android:exported="false" />
    </application>

</manifest>